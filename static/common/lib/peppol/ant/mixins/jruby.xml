<?xml version="1.0" encoding="UTF-8"?>
<project name="jruby">

    <!-- Default properties -->
    <property name="jruby.server.port" value="8000"/>

    <!-- Generic triggering of JRuby -->
    <macrodef name="jruby">
        <attribute name="args" default="-h"/>

        <sequential>
            <apply
                executable="${env.PDK_PATH}/lib/jruby/bin/jruby.bat"
                failonerror="true"
                osfamily="windows">
                <arg line="@{args}"/>
            </apply>
            <apply
                executable="${env.PDK_PATH}/lib/jruby/bin/jruby"
                failonerror="true"
                osfamily="unix">
                <arg line="@{args}"/>
            </apply>

            <!-- <exec executable="${env.PDK_PATH}/bin/jruby">
                <arg line="@{args}"/>
            </exec> -->
        </sequential>
    </macrodef>

</project>